  </ItemGroup>

  <ItemGroup>
    <Folder Include="GraphicalAssets\" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Gear\ArmorList.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Gear\WeaponsList.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Magic\SpellList.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
